{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "raytrace",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceRoot}/zig-out/bin/raytrace",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "build",
      // "environment": [
      //   {
      //     "name": "PATH",
      //     "value": "$PATH:${command:cmake.launchTargetDirectory}"
      //   }
      // ],
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        // {
        //   "description": "Connect to valgrind",
        //   "text": "${command:valgrind-task-integration.valgrindGdbArg}",
        //   "ignoreFailures": true
        // }
      ]
    },
    {
      "name": "Deubug with valgrind",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "preLaunchTask": "valgrind-debug",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceRoot}",
      "environment": [
        {
          "name": "PATH",
          "value": "$PATH:${command:cmake.launchTargetDirectory}"
        }
      ],
      "externalConsole": true,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Connect to valgrind",
          "text": "target remote | vgdb",
          "ignoreFailures": true
        }
      ]
    }
  ]
}