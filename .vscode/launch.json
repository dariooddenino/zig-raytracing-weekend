  "version": "0.2.0",
  "configurations": [
    {
      "type": "cppdbg",
      "request": "launch",
      "name": "Debug",
      "program": "${workspaceRoot}/zig-out/bin/raytrace",
      "stopAtEntry": false,
      "args": [],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "build",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        // {
        //   "description": "Connect to valgrind",
        //   "text": "${command:valgrind-task-integration.valgrindGdbArg}",
        //   "ignoreFailures": true
        // }
      ]
    }
  ]
}